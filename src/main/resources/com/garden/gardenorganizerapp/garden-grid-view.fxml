<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane style="-fx-background-color: green;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="com.garden.gardenorganizerapp.viewcontrollers.GardenGridViewController">
    <top>
        <MenuBar fx:id="menuBar"></MenuBar>
    </top>
    <center>
        <VBox fx:id="gardenCanvas" alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="0">
         <padding>
            <Insets top="5.0" />
         </padding></VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="5.0">
            <padding>
                <Insets bottom="5.0" />
            </padding>
            <Button id="newBed" fx:id="newBed" onAction="#onNewBedClick" prefWidth="150" text="Neues Beet anlegen" />
            <Button id="addPlants" fx:id="addPlants" onAction="#onAddPlantsClick" prefWidth="150" text="Pflanzen setzen" />
        </HBox>
    </bottom>
</BorderPane>
