<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane style="-fx-background-color: green;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.garden.gardenorganizerapp.viewcontrollers.GardenGridViewController">
    <top>
        <MenuBar fx:id="menuBar" />
    </top>
    <center>
        <VBox fx:id="gardenCanvas" alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="0">
         <padding>
            <Insets top="5.0" />
         </padding>
         </VBox>
    </center>
    <left>
        <VBox alignment="CENTER">
            <Label fx:id="label2" text="WÃ¤hle:" />
            <VBox fx:id="buttonLayout" />
            <Label fx:id="label" text="ODER Planze:" />
            <ComboBox fx:id="cropDropDown" prefWidth="124.0" />
            <ListView fx:id="varietyList" prefWidth="124.0">
            </ListView>
            <Spinner fx:id="plantCount" editable="true" prefWidth="124.0">
                <valueFactory>
                    <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="100" amountToStepBy="1" initialValue="1"/>
                </valueFactory>
            </Spinner>
            <Label fx:id="recPlantCount" prefWidth="124.0">Empfohlen: </Label>
            <HBox>
                <Button fx:id="addPlants" onAction="#onAddPlantsClick" prefWidth="110.0" text="Item platzieren" />
                <Button fx:id="turnItem" mnemonicParsing="false" onAction="#turnItem">
                    <graphic>
                        <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="https://cdn2.vectorstock.com/i/1000x1000/53/96/rotate-icon-vector-10875396.jpg" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </left>
    <bottom>
        <HBox alignment="CENTER" spacing="5.0" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="5.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
