<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: green;" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.garden.gardenorganizerapp.viewcontrollers.GardenGridViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label fx:id="gardenTitle" visible="true" alignment="TOP_CENTER">
        <font><Font name="Century Gothic" size="30.0"/></font>
    </Label>
    <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: green;" fx:id="gardenCanvas">

    </VBox>

    <Button id="newBed" fx:id="newBed" text="Neues Beet anlegen" onAction="#onNewBedClick" prefWidth="150" />
    <Button id="addPlants" fx:id="addPlants" text="Pflanzen setzen" onAction="#onAddPlantsClick" prefWidth="150" />

</VBox>
