<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: green;" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.garden.gardenorganizerapp.viewcontrollers.NewGardenViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <TextField fx:id="titleTextField" promptText="Gartenname eingeben" maxWidth="300"/>
    <TextField fx:id="widthIntegerField" promptText="Gesamtbreite des Gartens in cm" maxWidth="300"/>
    <TextField fx:id="heightIntegerField" promptText="Gesamtlänge des Gartens in cm" maxWidth="300"/>
    <TextField fx:id="gridSizeIntegerField" promptText="Rastergröße" maxWidth="300" text="20" />

    <Button fx:id="createGarden" text="Garten erstellen" onAction="#onCreateGardenButtonClick"/>
</VBox>
